<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.socat.ha-proxy</string>

    <key>ProgramArguments</key>
    <array>
        <string>/opt/homebrew/bin/socat</string>
        <string>TCP-LISTEN:8123,bind=127.0.0.1,fork</string>
        <string>TCP:192.168.1.x:8123</string>
    </array>

    <!-- Replace 192.168.1.x above with your HA VM's local IP address -->
    <!-- Find it with: utmctl ip-address <your-vm-uuid> -->

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/tmp/socat-ha.log</string>

    <key>StandardErrorPath</key>
    <string>/tmp/socat-ha-error.log</string>
</dict>
</plist>
